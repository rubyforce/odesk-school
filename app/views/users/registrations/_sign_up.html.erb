<%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true, :html => { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <div class="col-sm-10">
    	<%= f.text_field :name, placeholder: "Full Name" %>
  	</div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">	
    	<%= f.text_field :email, placeholder: "Email" %>
  	</div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
    	<%= f.password_field :password, placeholder: "Password"%>
  	</div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    	<%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
    <span>Already have an account? <a href="<%= new_user_session_path %>" class="sign-in fancybox.ajax">Sign in</a></span>
  </div>
<% end %>
