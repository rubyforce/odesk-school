<div class="row">
  <div class="col-xs-6 col-sm-3"><%= link_to "update", admin_student_users_path %></div>
  <div class="col-xs-6 col-sm-3">.col-xs-6 .col-sm-3</div>
  <div class="col-xs-6 col-sm-3">.col-xs-6 .col-sm-3</div>
</div>

<div class="column table" style='position: relative; '>
  <table class="ui celled table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Registration Date</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <%- @student_users.each do |su| %>
      <tr>
          <td><%= su.first_name %></td>
          <td><%= su.last_name %></td>
          <td><%= su.created_at.strftime("%d/%m/%Y") %></td>
          <td>
            <%= link_to "Edit", edit_admin_student_user_path(su), :class => "mini ui green button" %>
            <%= link_to "Delete", [:admin, su], :confirm => "Are you sure?", :method => :delete, :class => "mini ui red button" %>
          </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div style="width: 0px; margin: 25px auto;">
    <%= link_to "Add Student", new_admin_student_user_path, :class => "positive ui button" %>  
  </div>
</div>