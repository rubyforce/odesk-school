<%= render partial: 'layouts/errors', :locals => { :object => @student_user} %>
<div class="field">
  <%= su.text_field :entry_no, :placeholder => "Entry No." %>
</div>

<div class="field">
  <%= su.text_field :group_no, :placeholder => "Group No." %>
</div>

<div class="field">
  <%= su.text_field :admission_date, :placeholder => "Date of Admision" %>
</div>

<div class="field">
  <%= su.label :std_of_admission %>
  <%= su.select :std, [["Something1", StudentUser::SOMETHING1], ["Something2", StudentUser::SOMETHING2]], :include_blank => true %>
</div>

<div class="field">
  <%= su.text_field :academic_year, :placeholder => "Academic Year" %>
</div>

<div class="field">
  <%= su.text_field :first_name, :placeholder => "First Name" %>
</div>

<div class="field">
  <%= su.text_field :father_name, :placeholder => "Father's Name" %>
</div>

<div class="field">
  <%= su.text_field :father_name, :placeholder => "Mother's Name" %>
</div>

<div class="field">
  <%= su.text_field :last_name, :placeholder => "Last Name" %>
</div>

<div class="field">
  <%= su.label :place_of_birth %>
  <%= su.select :birth_place, [["Belarus", StudentUser::BELARUS], ["USA", StudentUser::USA], ["India", StudentUser::INDIA]], :include_blank => true %>
</div>

<div class="field">
  <%= su.label :religion %>
  <%= su.select :religion, [["RELIGION1", StudentUser::RELIGION1], ["RELIGION2", StudentUser::RELIGION2]], :include_blank => true %>
</div>

<div class="field">
  <%= su.label :caste %>
  <%= su.select :caste, [["CASTE1", StudentUser::CASTE1], ["CASTE2", StudentUser::CASTE2]], :include_blank => true %>
</div>

<div class="field">
  <%= su.label :nationality %>
  <%= su.select :nationality, [["NATIONALITY1", StudentUser::NATIONALITY1], ["NATIONALITY2", StudentUser::NATIONALITY2]], :include_blank => true %>
</div>

<div class="field">
  <%= su.label :standard %>
  <%= su.select :standard, [["STANDARD1", StudentUser::STANDARD1], ["STANDARD2", StudentUser::STANDARD2]], :include_blank => true %>
</div>

<div class="field">
  <%= su.label :division %>
  <%= su.select :division, [["DIVISION1", StudentUser::DIVISION1], ["DIVISION2", StudentUser::DIVISION2]], :include_blank => true %>
</div>

<div class="field">
  <%= su.label :transport %>
  <%= su.select :transport, [["Car", StudentUser::CAR], ["Bus", StudentUser::BUS]], :include_blank => true %>
</div>

<div class="field">
  <%= su.label :finance_mode %>
  <%= su.select :finance_mode, [["FINANCE1", StudentUser::FINANCE1], ["FINANCE2", StudentUser::FINANCE2]], :include_blank => true %>
</div>

<div class="field">
  <%= su.text_field :remarks, :placeholder => "Remarks" %>
</div>

<div class="field">
  <%= su.text_field :last_school, :placeholder => "Last School" %>
</div>

<div class="ui buttons">
  <%= link_to "Cancel", :back, :class => "ui button" %>
  <div class="or"></div>
  <%= su.submit "Save", :class => "ui positive button" %>
</div>
