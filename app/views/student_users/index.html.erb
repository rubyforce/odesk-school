<div class="column table" style='position: relative; '>
  <table class="ui celled table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Last Name</th>
        <th>Registration Date</th>
        <th>E-mail address</th>
        <th>Gender</th>
      </tr>
    </thead>
    <tbody>
      <%- @student_users.each do |su| %>
      <tr>
          <td><%= su.first_name %></td>
          <td><%= su.middle_name %></td>
          <td><%= su.last_name %></td>
          <td><%= su.created_at.strftime("%d/%m/%Y") %></td>
          <td><%= su.email %></td>
          <td><%= su.gender %></td>
          <td><%= link_to "Show", student_user_path(su) %></td>
          <td><%= link_to "Edit", edit_student_user_path(su) %></td>
          <td><%= link_to "Delete", su, :confirm => "Are you sure?", :method => :delete %></td>
      </tr>
      <% end %>
    </tbody>
    <tfoot class="full-width">
      <tr>
        <th></th>
        <th colspan="4">
          <div class="ui right floated small primary labeled icon button">
            <i class="user icon"></i> <%=link_to "Add Student", new_student_user_path%>
          </div>
        </th>
      </tr>
    </tfoot>
  </table>
</div>